# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[Makefile]
indent_style = tab

[*.{scala, java, html, js, ts, css, scss, json, yml, conf}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
